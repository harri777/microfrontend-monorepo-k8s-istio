{
  "version": "1.1.3",
  "npmClient": "npm",
  "command": {
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish",
      "registry": "https://npm.pkg.github.com"
    },
    "bootstrap": {
      "ignore": "component-*",
      "npmClientArgs": ["--no-package-lock"]
    }
  },
  "nohoist": [
    "*react*",
    "*react*/**",
    "*react-native*",
    "*react-native*/**",
    "**/@vue/cli-plugin-eslint", "**/@vue/cli-plugin-eslint/**"
  ],
  "packages": ["packages/*", "packages/shared/*"]
}
